[MASTER]

# Use multiple processes to speed up Pylint. Specifying 0 will auto-detect the
# number of processors available to use.
jobs=0

[BASIC]

# Good variable names which should always be accepted, separated by a comma. "x"
# and "y" aren't standard, but are allowed due to the presence of cartesian
# graphs.
good-names=i,
           j,
           k,
           ex,
           Run,
           _,
           x,
           y
